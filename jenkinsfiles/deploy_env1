pipeline {
    agent {
        dockerfile {     
            args '-u root -v /home/ubuntu/ansible/env_1:/ansible/ -v /home/ubuntu/ansible/env_1/ansible.cfg:/etc/ansible/ansible.cfg'
        }
    }

    stages {
        stage("Pull") {
            steps {
                sh 'ansible-playbook /ansible/playbooks/pull-repo.yml'
            }
        }
        stage("Testing") {
            steps {       
                sh 'ansible-playbook /ansible/playbooks/tests-playbook.yml'
            }
        }
        stage("Deploy") {
            steps {                
                sh 'ansible-playbook  /ansible/playbooks/deploy-playbook.yml'
            }
        }
    }
}

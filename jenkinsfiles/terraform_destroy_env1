pipeline{
    agent any
    tools {
        terraform 'terraform'
    }

    stages {
        stage('Terraform Init') {
            steps {
                dir('terraform/env_1'){
                    sh 'terraform init'
                }
                
            }
        }
        stage('Terraform Destroy') {
            steps {
                dir('terraform/env_1'){
                    sh 'terraform apply -destroy -auto-approve -no-color'
                }
            }
        }
    }
}
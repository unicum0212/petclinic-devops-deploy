pipeline{
    agent any
    tools {
        terraform 'terraform'
    }
    
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-ssh-key', url: 'git@github.com:unicum0212/test.git'
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Apply') {
            steps {
                sh 'terraform apply -auto-approve -no-color'
                sh 'terraform output > file.txt'
            }
        }
    }
}

pipeline {
    agent {
        dockerfile {     
            args '-u root -v /home/ubuntu/ansible/env_2:/ansible/ -v /home/ubuntu/ansible/env_2/ansible.cfg:/etc/ansible/ansible.cfg'
        }
    }

    stages {
        stage("Deploy App") {
            steps {
                sh 'ansible-playbook /ansible/playbooks/deploy-playbook.yml'
            }
        }
    }
}